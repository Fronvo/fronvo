// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("FRONVO_PRISMA_URL")
}

model Account {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  profileId    String   @unique
  email        String   @unique
  username     String
  bio          String   @default("")
  password     String
  avatar       String   @default("")
  banner       String   @default("")
  creationDate DateTime @default(now())
  following    Json[]
  followers    Json[]
  isPrivate    Boolean?
  isInRoom     Boolean  @default(false)
  roomId       String   @default("")
  isAdmin      Boolean  @default(false)
}

model Post {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  postId       String   @unique @default(uuid())
  author       String
  content      String
  attachment   String   @default("")
  creationDate DateTime @default(now())
}

model Room {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  ownerId       String
  roomId        String   @unique
  name          String
  creationDate  DateTime @default(now())
  icon          String   @default("")
  members       Json[]
  bannedMembers Json[]
}

model RoomMessage {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  ownerId      String
  roomId       String
  messageId    String   @unique
  content      String
  creationDate DateTime @default(now())
  isReply      Boolean  @default(false)
  replyContent String   @default("")
}

model Token {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  token     String
  profileId String @unique
}

model Log {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  info      String
  timestamp DateTime @default(now())
}

model Report {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  reportName String
  timestamp  DateTime @default(now())
}
