// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("FRONVO_PRISMA_URL")
}

model Account {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  profileId     String   @unique
  email         String   @unique
  username      String
  bio           String   @default("")
  password      String
  avatar        String   @default("")
  creationDate  DateTime @default(now())
  following     Json[]
  followers     Json[]
  isPrivate     Boolean?
  isInCommunity Boolean  @default(false)
  communityId   String   @default("")
}

model Post {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  postId       String   @unique @default(uuid())
  author       String
  title        String
  content      String
  attachment   String   @default("")
  creationDate DateTime @default(now())
}

model Community {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  ownerId      String
  communityId  String   @unique
  name         String
  description  String
  creationDate DateTime @default(now())
  icon         String   @default("")
  members      Json[]
  inviteOnly   Boolean  @default(false)
}

model CommunityMessage {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  ownerId      String
  communityId  String   @unique
  messageId    String   @unique
  content      String
  creationDate DateTime @default(now())
}

model Token {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  token     String
  profileId String @unique
}

model Log {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  info      String
  timestamp DateTime @default(now())
}

model Report {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  reportName String
  timestamp  DateTime @default(now())
}
