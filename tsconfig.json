{
  "compilerOptions": {
    "outDir": "./output",
    // TODO: Remove when all files are converted
    "allowJs": true,
    "target": "es6",
    "removeComments": true,
    "pretty": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "other": ["other"],
      "events": ["events"]
    },
    "esModuleInterop": true,
    "sourceMap": true,
    "strictFunctionTypes": true
  },
  "include": [
    "src/events/**/*",
    "src/main/**/*",
    "src/other/**/*",
    "src/test/**/*"
  ],
  "ts-node": {
    "swc": true
  }
}
