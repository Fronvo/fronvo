{
  "compilerOptions": {
    "outDir": "./output",
    // TODO: Remove when all files are converted
    "allowJs": true,
    "target": "es6",
    "removeComments": true,
    "pretty": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@other*": ["other/*"],
      "@events*": ["events/*"]
    },
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "./events/**/*",
    "./main/**/*",
    "./other/**/*",
    "./test/**/*"
  ],
  "ts-node": {
    "swc": true
  }
}
